{
  "name": "backend",
  "version": "1.40.0-rc.1",
  "description": "",
  "repository": {
    "type": "git",
    "url": "git@github.com:fhswf/appointme.git"
  },
  "main": "server.js",
  "type": "module",
  "scripts": {
    "test": "vitest run src/**/*.spec.ts --coverage --reporter=verbose",
    "ci": "pnpm run build && vitest run src/**/*.spec.ts --coverage; node ../utility/patch-junit-xml.js TEST-backend.xml; pnpm dlx junit-to-ctrf -o ../ctrf/backend-ctrf.json TEST-backend.xml; node ../utility/patch-ctrf.js ../ctrf/backend-ctrf.json",
    "migrate": "node --import tsx src/scripts/run-migrations.ts",
    "migrate:prod": "node build/scripts/run-migrations.js",
    "start": "node --import ./build/config/instrument.js build/server.js",
    "server": "node --import tsx --import ./src/config/instrument.ts --watch src/server.ts",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "build": "tsc"
  },
  "contributors": [
    {
      "name": "Felix Hinnemann"
    },
    {
      "name": "Christian Gawron",
      "email": "gawron.christian@fh-swf.de"
    }
  ],
  "license": "MIT",
  "dependencies": {
    "@sentry/node": "10.36.0",
    "@sentry/profiling-node": "10.36.0",
    "body-parser": "^2.2.2",
    "common": "file:../common",
    "concurrently": "^9.2.1",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.6",
    "csrf-csrf": "^4.0.3",
    "date-fns": "^4.1.0",
    "date-fns-tz": "^3.2.0",
    "dotenv": "^17.2.3",
    "express": "^5.0.1",
    "express-jwt": "^8.4.1",
    "express-rate-limit": "^8.2.1",
    "express-validator": "^7.0.1",
    "google-auth-library": "^10.5.0",
    "googleapis": "^170.1.0",
    "ical-generator": "^10.0.0",
    "jose": "6.1.3",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.29.1",
    "mongoose": "^9.1.5",
    "node-ical": "^0.23.1",
    "nodemailer": "^7.0.11",
    "openid-client": "^6",
    "remark": "15.0.1",
    "remark-html": "16.0.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "tsdav": "^2.1.6",
    "validator": "^13.12.0",
    "winston": "^3.16.0",
    "winston-mongodb": "7.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.28.6",
    "@babel/preset-typescript": "^7.23.3",
    "@types/babel__core": "^7",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.3",
    "@types/node": "^25.0.10",
    "@types/nodemailer": "^7.0.5",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@vitest/coverage-istanbul": "^4.0.17",
    "@vitest/coverage-v8": "^4.0.18",
    "dotenv-cli": "^11.0.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-config-react-app": "^7.0.1",
    "nodemon": "^3.0.1",
    "supertest": "^7.2.2",
    "ts-node": "^10.9.1",
    "tsx": "^4.21.0",
    "vitest": "^4.0.18"
  },
  "eslintConfig": {
    "extends": [
      "react-app"
    ]
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      [
        "@semantic-release/exec",
        {
          "prepareCmd": "node ../utility/set-version.js ${nextRelease.version}"
        }
      ],
      [
        "@semantic-release/exec",
        {
          "execCwd": "..",
          "prepareCmd": "node utility/patch-workspace-versions.js && node utility/sync-root-version.js ${nextRelease.type}"
        }
      ],
      [
        "@semantic-release/exec",
        {
          "execCwd": ".",
          "prepareCmd": "node ../utility/update-kustomize.js backend backend ${nextRelease.version}"
        }
      ],
      "@semantic-release/github",
      [
        "@codedependant/semantic-release-docker",
        {
          "dockerImage": "backend",
          "dockerRegistry": "ghcr.io",
          "dockerProject": "fhswf/appointme",
          "dockerContext": ".."
        }
      ],
      [
        "@semantic-release/git",
        {
          "assets": [
            "package.json",
            "CHANGELOG.md",
            "k8s/overlays/**/kustomization.yaml"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ]
    ]
  },
  "gitHead": "a4b1d2cc78703828c99149277115e8434b675afc"
}
